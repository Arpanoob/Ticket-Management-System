<script>
    // Define the logout function in the global scope
    function logout() {
        console.log("hi");
        window.location.href = "/logout";
    }

    document.addEventListener("DOMContentLoaded", function() {
        const conLoginBox = document.getElementById("con");

        conLoginBox.addEventListener("click", function() {
            window.location.href = "/login";
        });

        const departmentLoginBox = document.getElementById("dep");

        departmentLoginBox.addEventListener("click", function() {
            window.location.href = "/deplogin";
        });

        // Attach the logout function to the logout button
        const logoutButton = document.getElementById("logout");
        logoutButton.addEventListener("click", logout);
    });
</script>

