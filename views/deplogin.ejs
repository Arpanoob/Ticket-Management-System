    background-color: #E1BEE7;
    color: #8C55AA;
    font-family: 'Ubuntu', sans-serif;
}

/* Styling for department label */
#departmentLabel {
    color: #8C55AA;
    font-size: 16px;
    font-weight: bold;
    margin-left: 10%;
}


  
    body {
      font-family: 'Ubuntu', sans-serif;
    }

    h1 {
      text-align: center;
    }

    .main {
      text-align: center;
      margin-top: 20px;
    }

    .sign {
      font-size: 24px;
    }

    .form {
      text-align: left;
    }

    .un,
    .pass,
    .submit,
    .Sign_ {
      display: block;
      margin: 10px auto; /* Center-align the elements horizontally */
      width: 300px; /* Adjust the width as needed */
    }

    /* Center-align the "Sign In" button */
    .submit {
      margin-top: 20px; /* Add some top margin for spacing */
    }
  </style>
  <title>Sign in</title>
</head>

<body>
  <h1>WELCOME TO TMS</h1>
  <div class="main">
    <p class="sign" align="center">Sign in</p>
    <form class="form" method="post" action="/deplogin">
      <select id="department" name="department">
        <option value="technical">Technical</option>
        <option value="non-technical">Non-Technical</option>
        <option value="financial">Financial</option>
      </select>
      <input class="un" id="email" type="email" name="email" placeholder="Email">
      <input class="pass" id="Password" type="password" name="password" placeholder="Password">
      <button class="submit" type="submit">Sign in</button>
    </form>
    <p class="Sign_" align="center"><a href="/depsignup">Sign Up</a></p>
  </div>
</body>
    
